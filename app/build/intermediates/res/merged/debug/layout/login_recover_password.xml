<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:textSize="20dip"
        android:id="@+id/login_help_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_help_instructions" />

    <EditText
        android:id="@+id/login_help_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_help_email_input_hint"
        android:inputType="textEmailAddress"></EditText>

    <Button
        android:id="@+id/login_help_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_submit_button_label"
        android:textColor="#20be8c"
        android:background="#FFFFFF"/>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button"
        android:textColor="#20be8c"
        android:background="#FFFFFF"/>

</LinearLayout>
